{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Stack template for roles needed for the Kubernetes instances to run",
  "Parameters": {
    "KmsKeyId": {
      "Type": "String",
      "Description": "The KMS key ID used for decrypting encrypted assets. This should not be the full ARN. Example value: 780da7cd-6acf-48e6-9693-5ffc8c3b6484"
    },
    "SystemCodeTag": {
      "Type": "String",
      "Description": "The system code tag of the resources to limit access to. Will apply to the resources created during provisioning. Example value: upp"
    },
    "S3BucketName": {
      "Type": "String",
      "Description": "The name of S3 bucket used for provisioning. Example value: com.ft.upp.k8s-provision"
    }
  },
  "Resources": {
    "IAMInstanceProfileEtcd": {
      "Properties": {
        "InstanceProfileName" : {"Fn::Join" : ["", [{ "Ref" : "AWS::StackName" } , "-etcd-role" ]]},
        "Path": "/",
        "Roles": [
          {
            "Ref": "IAMRoleEtcd"
          }
        ]
      },
      "Type": "AWS::IAM::InstanceProfile"
    },
    "IAMRoleEtcd": {
      "Properties": {
        "RoleName": {"Fn::Join" : ["", [{ "Ref" : "AWS::StackName" } , "-etcd-role" ]]},
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": "kms:Decrypt",
                  "Resource": {"Fn::Join" : ["", [ "arn:aws:kms::", { "Ref" : "AWS::AccountId" } , ":key/${KmsKeyId}" ]]},
                  "Effect": "Allow"
                },
                {
                  "Action": "ec2:DescribeTags",
                  "Effect": "Allow",
                  "Resource": [
                    {"Fn::Join" : ["", [ "arn:aws:ec2::", { "Ref" : "AWS::AccountId" } , ":/*" ]]}
                  ],
                  "Condition": {
                    "StringEquals": {
                      "ec2:ResourceTag/SystemCodeTag": "${SystemCodeTag}"
                    }
                  }
                }
              ]
            },
            "PolicyName": "root"
          }
        ]
      },
      "Type": "AWS::IAM::Role"
    },
    "IAMInstanceProfileController": {
      "Properties": {
        "InstanceProfileName" : {"Fn::Join" : ["", [{ "Ref" : "AWS::StackName" } , "-controller-role" ]]},
        "Path": "/",
        "Roles": [
          {
            "Ref": "IAMRoleController"
          }
        ]
      },
      "Type": "AWS::IAM::InstanceProfile"
    },
    "IAMRoleController": {
      "Properties": {
        "RoleName": {"Fn::Join" : ["", [{ "Ref" : "AWS::StackName" } , "-controller-role" ]]},
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "ec2:CreateSecurityGroup",
                    "ec2:CreateTags",
                    "ec2:Describe*"
                  ],
                  "Resource": "*",
                  "Effect": "Allow"
                },
                {
                  "Action": [
                    "ec2:AuthorizeSecurityGroupIngress",
                    "ec2:DeleteSecurityGroup",
                    "ec2:RevokeSecurityGroupIngress"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    "*"
                  ],
                  "Condition": {
                    "StringLike": {
                      "ec2:ResourceTag/KubernetesCluster": "*"
                    }
                  }
                },
                {
                  "Action": [
                    "ec2:AttachVolume",
                    "ec2:DetachVolume"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    {"Fn::Join" : ["", [ "arn:aws:ec2::", { "Ref" : "AWS::AccountId" } , ":instance/*" ]]},
                    {"Fn::Join" : ["", [ "arn:aws:ec2::", { "Ref" : "AWS::AccountId" } , ":volume/*" ]]}
                  ],
                  "Condition": {
                    "StringEquals": {
                      "ec2:ResourceTag/SystemCodeTag": "${SystemCodeTag}"
                    }
                  }
                },
                {
                  "Action": [
                    "elasticloadbalancing:CreateLoadBalancer",
                    "elasticloadbalancing:AddTags",
                    "elasticloadbalancing:DescribeLoadBalancers",
                    "elasticloadbalancing:DescribeLoadBalancerAttributes",
                    "elasticloadbalancing:SetSecurityGroups",
                    "elasticloadbalancing:SetSubnets",
                    "elasticloadbalancing:DescribeTags",
                    "elasticloadbalancing:DeleteLoadBalancerListeners",
                    "elasticloadbalancing:CreateLoadBalancerListeners",
                    "elasticloadbalancing:ModifyLoadBalancerAttributes",
                    "elasticloadbalancing:DeleteLoadBalancer",
                    "elasticloadbalancing:ConfigureHealthCheck",
                    "elasticloadbalancing:RegisterInstancesWithLoadBalancer",
                    "elasticloadbalancing:DeregisterInstancesFromLoadBalancer"
                  ],
                  "Resource": "*",
                  "Effect": "Allow"
                },
                {
                  "Action": [
                    "s3:GetObject"
                  ],
                  "Resource": "arn:aws:s3:::${S3BucketName}/*",
                  "Effect": "Allow"
                },
                {
                  "Action": "cloudformation:SignalResource",
                  "Resource": {"Fn::Join" : ["", [ "arn:aws:cloudformation::", { "Ref" : "AWS::AccountId" } , ":stack/*" ]]},
                  "Effect": "Allow"
                },
                {
                  "Action": "kms:Decrypt",
                  "Resource": {"Fn::Join" : ["", [ "arn:aws:kms::", { "Ref" : "AWS::AccountId" } , ":key/${KmsKeyId}" ]]},
                  "Effect": "Allow"
                }
              ]
            },
            "PolicyName": "root"
          }
        ]
      },
      "Type": "AWS::IAM::Role"
    },
    "IAMInstanceProfileWorker": {
      "Properties": {
        "InstanceProfileName" : {"Fn::Join" : ["", [{ "Ref" : "AWS::StackName" } , "-worker-role" ]]},
        "Path": "/",
        "Roles": [
          {
            "Ref": "IAMRoleWorker"
          }
        ]
      },
      "Type": "AWS::IAM::InstanceProfile"
    },

    "IAMRoleWorker": {
      "Properties": {
        "RoleName": {"Fn::Join" : ["", [{ "Ref" : "AWS::StackName" } , "-worker-role" ]]},
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": "ec2:Describe*",
                  "Effect": "Allow",
                  "Resource": [
                    {"Fn::Join" : ["", [ "arn:aws:ec2::", { "Ref" : "AWS::AccountId" } , ":/*" ]]}
                  ],
                  "Condition": {
                    "StringEquals": {
                      "ec2:ResourceTag/SystemCodeTag": "${SystemCodeTag}"
                    }
                  }
                },
                {
                  "Action": [
                    "ec2:AttachVolume",
                    "ec2:DetachVolume"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    {"Fn::Join" : ["", [ "arn:aws:ec2::", { "Ref" : "AWS::AccountId" } , ":instance/*" ]]},
                    {"Fn::Join" : ["", [ "arn:aws:ec2::", { "Ref" : "AWS::AccountId" } , ":volume/*" ]]}
                  ],
                  "Condition": {
                    "StringEquals": {
                      "ec2:ResourceTag/SystemCodeTag": "${SystemCodeTag}"
                    }
                  }
                },
                {
                  "Action": [
                    "s3:GetObject"
                  ],
                  "Resource": "arn:aws:s3:::${S3BucketName}/*",
                  "Effect": "Allow"
                },
                {
                  "Action": "kms:Decrypt",
                  "Resource": {"Fn::Join" : ["", [ "arn:aws:kms::", { "Ref" : "AWS::AccountId" } , ":key/${KmsKeyId}" ]]},
                  "Effect": "Allow"
                },
                {
                  "Action": "cloudformation:SignalResource",
                  "Resource": {"Fn::Join" : ["", [ "arn:aws:cloudformation::", { "Ref" : "AWS::AccountId" } , ":stack/*" ]]},
                  "Effect": "Allow"
                }
              ]
            },
            "PolicyName": "root"
          }
        ]
      },
      "Type": "AWS::IAM::Role"
    }
  }
}